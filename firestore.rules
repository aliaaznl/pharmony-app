rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection - users can only access their own user document
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
    }
    
    // Medications collection - authenticated users can read, but only write their own data
    // Caregivers can read patient data (app handles filtering via CaregiverPatients)
    match /Medications/{medicationId} {
      allow read: if isSignedIn(); // Authenticated users can read (app filters by caregiver relationships)
      allow write: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        request.auth.uid == resource.data.userId
      );
      allow create: if isSignedIn() && (
        isOwner(request.resource.data.userId) || 
        request.auth.uid == request.resource.data.userId
      );
    }
    
    // MedicationStatus collection
    match /MedicationStatus/{statusId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        request.auth.uid == resource.data.userId
      );
      allow create: if isSignedIn() && (
        isOwner(request.resource.data.userId) || 
        request.auth.uid == request.resource.data.userId
      );
    }
    
    // BloodPressure collection
    match /BloodPressure/{bpId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        request.auth.uid == resource.data.userId
      );
      allow create: if isSignedIn() && (
        isOwner(request.resource.data.userId) || 
        request.auth.uid == request.resource.data.userId
      );
    }
    
    // Symptoms collection
    match /Symptoms/{symptomId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        request.auth.uid == resource.data.userId
      );
      allow create: if isSignedIn() && (
        isOwner(request.resource.data.userId) || 
        request.auth.uid == request.resource.data.userId
      );
    }
    
    // Reminders collection
    match /Reminders/{reminderId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        request.auth.uid == resource.data.userId
      );
      allow create: if isSignedIn() && (
        isOwner(request.resource.data.userId) || 
        request.auth.uid == request.resource.data.userId
      );
    }
    
    // HeartRate collection
    match /HeartRate/{heartRateId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        request.auth.uid == resource.data.userId
      );
      allow create: if isSignedIn() && (
        isOwner(request.resource.data.userId) || 
        request.auth.uid == request.resource.data.userId
      );
    }
    
    // Temperature collection
    match /Temperature/{temperatureId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        request.auth.uid == resource.data.userId
      );
      allow create: if isSignedIn() && (
        isOwner(request.resource.data.userId) || 
        request.auth.uid == request.resource.data.userId
      );
    }
    
    // User collection (alternative naming)
    match /User/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
    }
    
    // Users collection - authenticated users can read their own data
    match /Users/{userId} {
      allow read: if isSignedIn() && isOwner(userId);
      allow write: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      // Allow authenticated users to list (app will filter by caregiver relationships)
      allow list: if isSignedIn();
    }
    
    // Appointments collection
    match /Appointments/{appointmentId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        request.auth.uid == resource.data.userId
      );
      allow create: if isSignedIn() && (
        isOwner(request.resource.data.userId) || 
        request.auth.uid == request.resource.data.userId
      );
    }

    // CaregiverInvitations collection
    match /CaregiverInvitations/{invitationCode} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
        request.auth.uid == request.resource.data.patientId;
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.patientId ||
        (!resource.data.isUsed && request.resource.data.isUsed)
      );
      allow delete: if isSignedIn() && 
        request.auth.uid == resource.data.patientId;
    }
    
    // CaregiverPatients collection - manage caregiver-patient relationships
    match /CaregiverPatients/{relationshipId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.caregiverId ||
        request.auth.uid == resource.data.patientId
      );
      allow list: if isSignedIn();
      allow create: if isSignedIn() && 
        request.auth.uid == request.resource.data.caregiverId;
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.caregiverId ||
        request.auth.uid == resource.data.patientId
      );
      allow delete: if isSignedIn() && (
        request.auth.uid == resource.data.caregiverId ||
        request.auth.uid == resource.data.patientId
      );
    }
    
    // PatientAccessCodes collection - patients create codes, authenticated users can verify
    match /PatientAccessCodes/{codeId} {
      // Patients can read their own codes
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.patientId ||
        request.auth.uid == resource.data.createdBy
      );
      // Allow authenticated users to query codes for verification (codes expire and are single-use)
      allow list: if isSignedIn();
      allow create: if isSignedIn() && 
        request.auth.uid == request.resource.data.patientId &&
        request.auth.uid == request.resource.data.createdBy;
      allow update: if isSignedIn() && 
        request.auth.uid == resource.data.patientId;
      allow delete: if isSignedIn() && 
        request.auth.uid == resource.data.patientId;
    }
    
    // TemporaryCaregiverSessions collection - track temporary access sessions
    match /TemporaryCaregiverSessions/{sessionId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.caregiverId ||
        request.auth.uid == resource.data.patientId
      );
      // Only authenticated users can create sessions
      allow create: if isSignedIn();
      allow update: if isSignedIn() && 
        request.auth.uid == resource.data.caregiverId;
      allow delete: if isSignedIn() && (
        request.auth.uid == resource.data.caregiverId ||
        request.auth.uid == resource.data.patientId
      );
    }

    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
