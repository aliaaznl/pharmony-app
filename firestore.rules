rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection - users can only access their own user document
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
    }
    
    // Medications collection - allow access for authenticated users and caregiver access
    match /Medications/{medicationId} {
      allow read, write: if isSignedIn() || true; // Allow unauthenticated for caregiver access
    }
    
    // MedicationStatus collection - allow access for authenticated users and caregiver access
    match /MedicationStatus/{statusId} {
      allow read, write: if isSignedIn() || true; // Allow unauthenticated for caregiver access
    }
    
    // BloodPressure collection - allow access for authenticated users and caregiver access
    match /BloodPressure/{bpId} {
      allow read, write: if isSignedIn() || true; // Allow unauthenticated for caregiver access
    }
    
    // Symptoms collection - allow access for authenticated users and caregiver access
    match /Symptoms/{symptomId} {
      allow read, write: if isSignedIn() || true; // Allow unauthenticated for caregiver access
    }
    
    // Reminders collection - allow access for authenticated users and caregiver access
    match /Reminders/{reminderId} {
      allow read, write: if isSignedIn() || true; // Allow unauthenticated for caregiver access
    }
    
    // HeartRate collection - allow access for authenticated users and caregiver access
    match /HeartRate/{heartRateId} {
      allow read, write: if isSignedIn() || true; // Allow unauthenticated for caregiver access
    }
    
    // Temperature collection - allow access for authenticated users and caregiver access
    match /Temperature/{temperatureId} {
      allow read, write: if isSignedIn() || true; // Allow unauthenticated for caregiver access
    }
    
    // User collection (alternative naming) - users can only access their own data
    match /User/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
    }
    
    // Users collection - allow read/write for authenticated users and caregiver access
    // Also allow querying by phone for caregiver access
    match /Users/{userId} {
      allow read, write, create, list: if true; // Allow all access for development/testing
    }
    
    // Appointments collection - allow access for authenticated users and caregiver access
    match /Appointments/{appointmentId} {
      allow read, write: if isSignedIn() || true; // Allow unauthenticated for caregiver access
    }

    // CaregiverInvitations collection - patients can create, anyone can read to accept
    match /CaregiverInvitations/{invitationCode} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
        request.auth.uid == request.resource.data.patientId;
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.patientId ||
        (!resource.data.isUsed && request.resource.data.isUsed)
      );
      allow delete: if isSignedIn() && 
        request.auth.uid == resource.data.patientId;
    }

    // CaregiverPatients collection - manage caregiver-patient relationships
    match /CaregiverPatients/{relationshipId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.caregiverId ||
        request.auth.uid == resource.data.patientId
      );
      // Allow querying for caregiver relationships - return empty for unauthenticated users
      allow list: if true; // This will return empty results for unauthenticated users
      allow create: if isSignedIn() && 
        request.auth.uid == request.resource.data.caregiverId;
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.caregiverId ||
        request.auth.uid == resource.data.patientId
      );
      allow delete: if isSignedIn() && (
        request.auth.uid == resource.data.caregiverId ||
        request.auth.uid == resource.data.patientId
      );
    }

    // PatientAccessCodes collection - patients can create their own codes
    match /PatientAccessCodes/{codeId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.patientId ||
        request.auth.uid == resource.data.createdBy
      );
      // Allow unauthenticated querying for access codes (needed for caregiver access)
      // This is safe because access codes are temporary and expire
      allow list: if isSignedIn() || true; // Allow unauthenticated queries for caregiver access
      allow create: if isSignedIn() && 
        request.auth.uid == request.resource.data.patientId &&
        request.auth.uid == request.resource.data.createdBy;
      allow update: if isSignedIn() && 
        request.auth.uid == resource.data.patientId;
      allow delete: if isSignedIn() && 
        request.auth.uid == resource.data.patientId;
    }

    // TemporaryCaregiverSessions collection - track temporary access sessions
    match /TemporaryCaregiverSessions/{sessionId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.caregiverId ||
        request.auth.uid == resource.data.patientId
      );
      allow create: if true; // Allow creation for caregiver access
      allow update: if isSignedIn() && 
        request.auth.uid == resource.data.caregiverId;
      allow delete: if isSignedIn() && (
        request.auth.uid == resource.data.caregiverId ||
        request.auth.uid == resource.data.patientId
      );
    }

    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 